# Stripe Horoscope Agent Environment

# ASI:One (OpenAI-compatible)
ASI_ONE_API_KEY=your_asi_one_api_key

# Stripe (test mode recommended)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# (Optional) Agent config
AGENT_SEED=stripe-horoscope-agent-test
AGENT_PORT=8012

# (Optional) Stripe customization
STRIPE_AMOUNT_CENTS=100
STRIPE_CURRENCY=usd
STRIPE_PRODUCT_NAME=Daily horoscope
STRIPE_SUCCESS_URL=https://agentverse.ai/payment-success

# (Optional) Stripe embedded Checkout expiry (seconds)
# Stripe requires at least ~1800s (30 mins). We clamp it internally to [1800, 86400].
STRIPE_CHECKOUT_EXPIRES_SECONDS=1800

